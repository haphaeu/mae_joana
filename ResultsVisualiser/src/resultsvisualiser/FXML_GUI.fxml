<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="480.0" minWidth="640.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="resultsvisualiser.FXML_GUIController">
   <children>
      <MenuBar fx:id="menuBar">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="menuFileOpen" mnemonicParsing="false" onAction="#handleMenuFileOpen" text="Open..." />
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Copy" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <BorderPane prefHeight="450.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <ScatterChart fx:id="chart" prefHeight="375.0" prefWidth="479.0" BorderPane.alignment="CENTER">
              <xAxis>
                <NumberAxis label="Variable" side="BOTTOM" fx:id="xAxis">
                     <tickLabelFont>
                        <Font name="Consolas" size="12.0" />
                     </tickLabelFont></NumberAxis>
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="yAxis" label="Cumulative Probability log-log" side="LEFT">
                     <tickLabelFont>
                        <Font name="Consolas" size="12.0" />
                     </tickLabelFont></NumberAxis>
              </yAxis>
            </ScatterChart>
         </center>
         <left>
            <VBox prefHeight="400.0" prefWidth="240.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Select variable:" />
                  <ComboBox fx:id="comboBox" prefWidth="240.0" />
                  <HBox prefWidth="200.0">
                     <children>
                        <Label minWidth="100.0" text="Hs [m]" />
                        <Label text="Tp [s]" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <ListView fx:id="listHs" />
                        <ListView fx:id="listTp" />
                     </children>
                  </HBox>
                  <Label text="Heading [deg]" />
                  <HBox>
                     <children>
                        <ListView fx:id="listHeading" />
                        <GridPane alignment="TOP_CENTER">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Button fx:id="btnPlot" alignment="CENTER" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="25.0" prefWidth="71.0" text="Plot" GridPane.columnSpan="2" />
                              <Label fx:id="lblTest" prefHeight="17.0" prefWidth="69.0" text="Label" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                           </children>
                        </GridPane>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </left>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
         </padding>
      </BorderPane>
   </children>
</AnchorPane>
